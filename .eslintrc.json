{
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-restricted-syntax": ["off"],
    "global-require": ["off"],
    "import/no-dynamic-require": ["off"],
    "no-console": ["off"],
    "no-await-in-loop": ["off"]
  }
}
